<% @page_title = @post.title %>

<div class = "left">
	<%= render :partial => @post, :locals => {:render_comments_count => false}%>
	
	<% if @post.has_comments? -%>
	<li>
		<h3>Comments</h3>
		<ul class="comments">
			<%= render :partial => "comments/comment",
					   		 :collection => @post.comments %>
		</ul>
	</li>
	<% end -%>
</div>

<li>
	<h3>Add your comment!</h3>
	<%= render :partial => "comments/form", :locals => {:parent => @post}  %>
</li>

<%- if logged_in? -%>
	<p><%= link_to 'Edit', edit_post_path(@post) %> |
<%- end -%>
<%= link_to 'Back', posts_path %></p>